{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "LOA Logs",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "startDragging": true,
        "setAlwaysOnTop": true
      },
      "shell": {
        "sidecar": true,
        "scope": [
          { "name": "lib/meter-core", "sidecar": true },
          { "name": "lib/loa-fake-log", "sidecar": true }
        ]
      },
      "fs": {
        "readFile": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "$RESOURCE/images/**/*.png"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "lib/meter-core",
        "lib/loa-fake-log"
      ],
      "resources": [
        "meter-data/*.json",
        "images/**/*.png"
      ],
      "icon": [
        "icons/45x45.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "xyz.snow",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "LOA Logs",
        "width": 800,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
